<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.SingleBeer">

    <ImageView
            android:layout_width="134dp"
            android:layout_height="135dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/SingleBeerImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="BeerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/SingleBeerName" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/SingleBeerImage" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="FirstBrewed"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:id="@+id/FirstBrewed"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/SingleBeerImage"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/Tagline" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/BeerABV"/>
    <TextView
            android:text="ABV"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:id="@+id/BeerABV" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/SingleBeerImage" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/FirstBrewed"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/IBU"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/SingleBeerImage" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/BeerABV"
            android:text="International Bitterness Unit (IBU)"/>
    <TextView
            android:text="BeerTagline"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:id="@+id/Tagline" app:layout_constraintStart_toEndOf="@+id/SingleBeerImage"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/SingleBeerName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/FirstBrewed" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/SingleBeerImage" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="BeerDesc"
                    android:layout_height="wrap_content" android:id="@+id/LongBeerDesc"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" android:textSize="18sp" android:layout_width="match_parent"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:text="Additional Brewing Infomation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="224dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/MoreInfo" android:textSize="18sp"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:text="TargetFG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/TargetFG" android:textSize="18sp"/>
            <TextView
                    android:text="TargetOG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/TargetOG" android:textSize="18sp"/>
            <TextView
                    android:text="EBC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/EBC" android:textSize="18sp"/>
            <TextView
                    android:text="SRM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/SRM" android:textSize="18sp"/>
            <TextView
                    android:text="PH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/PH" android:textSize="18sp"/>
            <TextView
                    android:text="AttenuationLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/AttenuationLevel" android:textSize="18sp"/>
            <TextView
                    android:text="BrewersTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/BrewersTips" android:textSize="18sp"/>
            <TextView
                    android:text="ContributedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/ContributedBy" android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>